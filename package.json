{
  "name": "solarstack",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "config": {
    "nodeEnv": "cross-env NODE_ENV=development"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "$npm_package_config_nodeEnv nest start --watch",
    "start:debug": "$npm_package_config_nodeEnv nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "typeorm:cli": "$npm_package_config_nodeEnv typeorm-ts-node-commonjs -d ./src/config/database/orm.config.ts",
    "typeorm:migration:generate": "npm run typeorm:cli -- migration:generate ./src/migrations/$npm_config_name",
    "typeorm:migration:create": "npm run typeorm:cli -- migration:create ./src/migrations/$npm_config_name",
    "typeorm:migration:run": "npm run typeorm:cli migration:run",
    "typeorm:sync": "npm run typeorm:cli schema:sync",
    "typeorm:drop": "npm run typeorm:cli schema:drop",
    "typeorm:reset": "npm run typeorm:drop && npm run typeorm:sync",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/secure-session": "^7.1.0",
    "@nestjs/common": "^10.2.8",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.8",
    "@nestjs/mapped-types": "*",  
    "@nestjs/platform-fastify": "^10.2.10",
    "@nestjs/typeorm": "^10.0.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.96",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "express-session": "^1.17.3",
    "pg": "^8.11.3",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.8",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-node": "^3.1.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
